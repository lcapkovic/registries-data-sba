{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/roster#",
	"listFields": [
		{"field":"id", "title": "ID"},
		{"field":"baseData.name", "title":"Meno"},
		{"field":"baseData.surName", "title":"Priezvisko"},
		{"field":"baseData.birthDate", "title":"Dátum narodenia"},
		{"field":"contactInfo.city", "title":"Mesto"}
	],
	"new": {
		"table": "roster",
		"title":"Roster",
		"properties": {
			"baseData": {
				"title": "Údaje o súpiske",
				"type": "object",
				"properties": {
					"name": {
						"title": "Názov súpisky",
						"type": "string",
						"required": true
					},
					"prName": {
						"title": "Marketingový názov družstva",
						"type": "string",
						"required": true
					},
					"club": {
						"title": "Klub",
						"type": "object",
						"$objectLink": {
							"registry": "organizations",
							"name": "club.name"
						},
						"required": true

					},
					"competition": {
						"title": "Súťaž",
						"required": true,
						"$objectLink": {
							"registry": "competition",
							"name": "baseData.name"
						}
					},
					"season": {
						"title": "Obdobie",
						"required": true,
						"$objectLink": {
							"registry": "season",
							"name": "baseData.name"
						}
					},
					"category":{
						"title": "Kategória",
						"type":"string",
						"required": true
					},
					"lastModification": {
						"title": "Dátum poslednej modifikácie",
						"type":"string",
						"required": true,
						"render" : {
							"component" : "psui-datepicker"
						}
					}
				}
			},
			"coaches": {
				"title": "Trénery",
				"type": "object",
				"properties": {
					"coach": {
						"title": "Tréner",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach1": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach2": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach3": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach4": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach5": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					}
				}
			},
			"listOfPlayers": {
				"title": "Zoznam hráčov",
				"type": "object",
				"properties": {
					"players": {
						"title": "Hráči",
						"type": "array",
						"items": {
							"$objectLink": {
								"registry": "people",
								"surName": "baseData.surName",
								"firstName": "baseData.name",
								"registered": "player.dateOfRegistration"
							},
							"required": true
						}
					}
				}
			}
		}
	},
	"view": {
		"$ref": "uri://registries/roster#new"
	},
	"search": {
		"table": "roster",
		"title":"Súpisky",
		"listFields": [
			{"field":"baseData.name", "title": "Názov"},
			{"field":"baseData.competition", "title":"Súťaž"},
			{"field":"baseData.season", "title":"Sezóna"},
			{"field":"baseData.club", "title":"Klub"}],
		"properties": {
			"baseData": {
				"$ref": "uri://registries/roster#new/properties/baseData"
			}
		}
	}
}


