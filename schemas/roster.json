{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/roster#",
	"listFields": [
		{"field":"id", "title": "ID"},
		{"field":"baseData.name", "title":"Meno"},
		{"field":"baseData.surName", "title":"Priezvisko"},
		{"field":"baseData.birthDate", "title":"Dátum narodenia"},
		{"field":"contactInfo.city", "title":"Mesto"}
	],
	"new": {
		"table": "roster",
		"title":"Roster",
		"properties": {
			"baseData": {
				"title": "Údaje o súpiske",
				"type": "object",
				"properties": {
					"competition": {
						"title": "Súťaž",
						"required": true,
						"$objectLink": {
							"registry": "competitions",
							"name": "baseData.name"
						}
					},
					"season": {
						"title": "Súťažný ročnik",
						"required": true,
						"$objectLink": {
							"registry": "seasons",
							"name": "baseData.name"
						}
					},
					"club": {
						"title": "Klub",
						"type": "object",
						"$objectLink": {
							"registry": "organizations",
							"name": "club.name"
						},
						"required": true
					},
					
					"ageCategory":{
						"title": "Veková kategória",
						"type":"string",
						"enum":[
								"D Extraliga muži",
								"D Prelínacia muži",
								"D 1.Liga muži - BA",
								"D 1.Liga muži - Západ",
								"D 1.Liga muži - Stred",
								"D 1.Liga muži - Východ",
								"D 2.Liga muži - BA",
								"D 2.Liga muži - Západ",
								"D 2.Liga muži - Stred",
								"D 2.Liga muži - Východ",
								"U20 muži - Východ",
								"U20 muži - Západ",
								"U18 muži - A",
								"U18 muži - B",
								"U18 muži - C",
								"U16 muži - A",
								"U16 muži - B",
								"U16 muži - C",
								"U14 muži - A",
								"U14 muži - B",
								"U14 muži - C",
								"D Extraliga ženy",
								"D Prelínacia ženy",
								"D 1.Liga ženy - BA",
								"D 1.Liga ženy - Západ",
								"D 1.Liga ženy - Východ",
								"D 1.Liga ženy - Stred",
								"D 2.Liga ženy - BA",
								"D 2.Liga ženy - Západ",
								"D 2.Liga ženy - Stred",
								"D 2.Liga ženy - Východ",
								"U20 ženy - Východ",
								"U20 ženy - Západ",
								"U18 ženy - A",
								"U18 ženy - B",
								"U18 ženy - C",
								"U16 ženy - A",
								"U16 ženy - B",
								"U16 ženy - C",
								"U14 ženy - A",
								"U14 ženy - B",
								"U14 ženy - C"
							],
					"required": true,
					"render":{
						"component": "psui-selectbox",
						"searchable": true
					}
					},
					"prName": {
						"title": "Názov družstva",
						"type": "string",
						"required": true
					},
					"lastModification": {
						"title": "Dátum poslednej modifikácie",
						"type":"string",
						"required": true,
						"render" : {
							"component" : "psui-datepicker"
						}
					}
				}
			},
			"coaches": {
				"title": "Trénery",
				"type": "object",
				"properties": {
					"coach": {
						"title": "Tréner",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach1": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach2": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach3": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach4": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					},
					"aCoach5": {
						"title": "Asistent Trénera",
						"type": "object",
						"$objectLink": {
							"registry": "people",
							"surName": "baseData.surName",
							"firstName": "baseData.name",
							"coachLicence": "coach.coachLicence"
						}
					}
				}
			},
			"listOfPlayers": {
				"title": "Zoznam hráčov",
				"type": "object",
				"properties": {
					"players": {
						"title": "Hráči",
						"type": "array",
						"items": {
							"$objectLink": {
								"registry": "people",
								"surName": "baseData.surName",
								"firstName": "baseData.name",
								"birthDate": "baseData.birthDate"
							},
							"required": true
						}
					}
				}
			}
		}
	},
	"view": {
		"$ref": "uri://registries/roster#new"
	},
	"search": {
		"table": "roster",
		"title":"Súpisky",
		"listFields": [
			{"field":"baseData.season.refData.name", "title":"Sezóna"},
			{"field":"baseData.competition.refData.name", "title":"Súťaž"},
			{"field":"baseData.club.refData.name", "title":"Klub"},
			{"field":"baseData.prName", "title": "Názov mužstva"}
			],
		"properties": {
			"baseData": {
				"$ref": "uri://registries/roster#new/properties/baseData"
			}
		}
	}
}


