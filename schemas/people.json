{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/people#person",
	"table": "people",
	"title":"person",
	"listFields": [
		{"field":"id", "title": "ID"},
		{"field":"baseData.name", "title":"Meno"},
		{"field":"baseData.surName", "title":"Priezvisko"},
		{"field":"baseData.birthDate", "title":"Dátum narodenia"},
		{"field":"contactInfo.city", "title":"Mesto"}
	],
	"properties": {
		"systemCredentials": {
			"$ref": "uri://registries/security#systemCredentials"
		},
		"_security": {
			"_create": {
				"_static": [
					"Security - write"
				]
			},
			"_read": {
				"_static": [
					"Security - read"
				]
			},
			"_modify": {
				"_static": [
					"Security - write"
				]
			}
		},
		"baseData": {
			"title": "Základné údaje",
			"type": "object",
			"properties": {
				"registrationID":{
					"title": "Registračné číslo",
					"transCode": "schema.people.registrationID",
					"type": "string",
					"required": true
				},
				"id": {
					"title": "Identifikačné číslo",
					"transCode": "schema.people.identifier",
					"type": "string",
					"required": true
				},
				"name": {
					"title": "Meno",
					"transCode": "schema.people.name",
					"type": "string",
					"required": true
				},
				"surName": {
					"title": "Priezvisko",
					"transCode": "schema.people.surName",
					"type": "string",
					"required": true
				},
				"bornName": {
					"title": "Rodné priezvisko",
					"transCode": "schema.people.bornName",
					"type": "string",
					"required": false
				},
				"titleBefore": {
					"title": "Titul pred",
					"transCode": "schema.people.title.before",
					"type": "string",
					"required": false
				},
				"titleAfter": {
					"title": "Titul za",
					"transCode": "schema.people.title.after",
					"type": "string",
					"required": false
				},
				"birthDate": {
					"title": "Dátum narodenia",
					"transCode": "schema.people.birthDate",
					"type": "string",
					"required": true,
					"render" : {
						"component" : "psui-datepicker"
					}
				},
				"gender": {
					"title": "Pohlavie",
					"transCode": "schema.people.gender",
					"type": " string",
					"enum": [
						"Muž",
						"Žena"
					],
					"required": true,
					"render":{
						"component": "psui-selectbox",
						"searchable": true
					}
				},
				"nationality": {
					"$ref":"uri://registries/nationality#country"
				},
				"stateOfPerson": {
					"title": "Stav osoby",
					"transCode": "schema.people.state.of.person",
					"type": "string",
					"enum":[
						"aktívna",
						"neaktívna"
					],
					"required": false,
					"render":{
						"component": "psui-selectbox",
						"searchable": true
					}
				}
			}
		},
		"referee":{
			"title": "Rozhodca",
			"type": "object",
			"properties": {
				"firstAssociation": {
					"title": "Prvotný zväz",
					"required": false,
					"$objectLink": {
						"registry": "organizations",
						"name": "association.associationName"
					}
				},
				"stateOfReferee": {
					"title": "Stav rozhodcu",
					"type": "string",
					"enum":[
						"aktívna",
						"neaktívna"
					],
					"required": false,
					"render":{
						"component": "psui-selectbox",
						"searchable": true
					}
				},
				"association": {
					"title": "Aktuálny zväz",
					"required": false,
					"$objectLink": {
						"registry": "organizations",
						"name": "association.associationName"
					}
				},
				"firstYear": {
					"title": "Rok začiatku kariéry",
					"type": "string",
					"required": false
				},
				"proffesionalCompetence": {
					"title": "Odborná spôsobilosť od (rok)",
					"type": "string",
					"required": false
				},
				"dateOfRegistration": {
					"title": "Dátum registrácie",
					"type": "string",
					"required": false,
					"render" : {
						"component" : "psui-datepicker"
					}
				},
				"refereeLicence": {
					"title": "Rozhodcovská licencia",
					"type": "string",
					"required": true
				}
			}
		},
